{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "react/no-array-index-key": "off",
    "react/self-closing-comp": "off",
    "@next/next/no-html-link-for-pages": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "react-hooks/rules-of-hooks": "off",
    "@next/next/no-img-element": "off",
    "react/no-danger": "off",
    "@next/next/no-dangerous-html": "off",
    "lint/security/no-dangerously-set-inner-html": "off"
  },
  "overrides": [
    {
      "files": ["components/tracking/tracking-scripts.tsx"],
      "rules": {
    "security/no-dangerously-set-inner-html": "off"
  }
    },
    {
      "files": ["**/*.test.{ts,tsx,js,jsx}", "**/*.stories.{ts,tsx,js,jsx}"],
      "rules": {
        "jsx-a11y/alt-text": "off"
      }
    }
  ]
}
